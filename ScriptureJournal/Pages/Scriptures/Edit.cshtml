@page "{id:int?}"
@model ScriptureJournal.Pages.Scriptures.EditModel

@{
  ViewData["Title"] = "Change Scripture Entry";
}

<h2>Edit</h2>

<h4>Scripture</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Scripture.ID" />
      <div class="form-group">
        <label asp-for="Scripture.Book" class="control-label"></label>
        <input asp-for="Scripture.Book" class="form-control" />
        <span asp-validation-for="Scripture.Book" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Scripture.Chapter" class="control-label"></label>
        <input asp-for="Scripture.Chapter" class="form-control" />
        <span asp-validation-for="Scripture.Chapter" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Scripture.Verse" class="control-label"></label>
        <input asp-for="Scripture.Verse" class="form-control" />
        <span asp-validation-for="Scripture.Verse" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Scripture.Note" class="control-label"></label>
        <input asp-for="Scripture.Note" class="form-control" />
        <span asp-validation-for="Scripture.Note" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input asp-for="Scripture.AddedDate" class="form-control" type="hidden" />
        <span asp-validation-for="Scripture.AddedDate" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Save" class="btn btn-default" />
      </div>
    </form>
  </div>
</div>

<button>
  <a asp-page="./Index">Back to List</a>
</button>

@section Scripts {
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
